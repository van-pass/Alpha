generator client {
  provider     = "prisma-client"
  output       = "./generated"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Schools {
  id             Int    @id @default(autoincrement())
  name           String
  whatsappNumber String @unique

  state        String
  city         String
  neighborhood String
  street       String
  number       String
  zipCode      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  students Students[]
}

model Drivers {
  id             Int      @id @default(autoincrement())
  plate          String   @unique
  name           String
  email          String   @unique
  password       String
  whatsappNumber String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  students Students[]
}

model Parents {
  id             Int      @id @default(autoincrement())
  customerId     String   @unique
  name           String
  cpf            String   @unique
  whatsappNumber String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  students Students[]
}

model Students {
  id         Int     @id @default(autoincrement())
  name       String
  monthlyFee Decimal @db.Decimal(10, 2)
  dueDay     Int
  isActive   Boolean @default(true)

  state        String
  city         String
  neighborhood String
  street       String
  number       String
  zipCode      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  driver   Drivers @relation(fields: [driverId], references: [id])
  driverId Int
  parent   Parents @relation(fields: [parentId], references: [id])
  parentId Int
  school   Schools @relation(fields: [schoolId], references: [id])
  schoolId Int
}

enum InvoicesStatus {
  PENDING
  PAID
  OVERDUE
  MANUAL_PAID
}

model Invoices {
  id            String         @id @default(cuid())
  amount        Decimal        @db.Decimal(10, 2)
  netAmount     Decimal        @db.Decimal(10, 2)
  dueDate       DateTime
  status        InvoicesStatus @default(PENDING)
  url           String
  transactionId String         @unique
  invoiceNumber String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
